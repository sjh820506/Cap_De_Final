#include <stdio.h>

int main() {
    int i; // for문을 구현하기 위한 변수
    int number; // 사용자로부터 숫자를 입력받기위한 변수
    int count_plus = 0; // 양수의 갯수를 누적하는 변수
    int count_minus = 0; // 음수의 갯수를 누적하는 변수

    for(i = 0; i <= 10 ; i++) {
        printf("%d번째 숫자 하나를 입력하세요. : ", i + 1);

        if(scanf("%d", &number) != 1) {
            printf("잘못 입력하셨습니다. 다시 입력해주세요.\n");

            while(getchar() != '\n');
            
            i--; 
            continue;
        }

        if(number > 0) { // number가 0 보다 크면...
            count_plus++; // 양수를 세는 변수에 1을 더한다.
        }
        else if (number < 0) { // number가 0 보다 작으면...
            count_minus++; // 음수를 세는 변수에 1을 더한다.
        }
    }

    printf("입력된 숫자 중에서 양의 정수는 %d개, 
    음의 정수는 %d개 입니다. \n", count_plus, count_minus);

    return 0;
}