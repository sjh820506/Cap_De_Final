#include <stdio.h>

int main() {
    int i; // for문을 구현하기 위한 변수
    int number; // 사용자로부터 숫자를 입력받기위한 변수
    int count_plus = 0; // 양수의 갯수를 누적하는 변수
    int count_minus = 0; // 음수의 갯수를 누적하는 변수

    for(i = 0; i <= 10 ; i++) {
        printf("숫자 하나를 입력하세요. : ");

        scanf("%d", &number);

        if(number > 0) {
            count_plus++;
        }
        else if (number < 0) {
            count_minus++;
        }
    }

    printf("입력된 숫자 중에서 양의 정수는 %d개, 
        음의 정수는 %d개 입니다. \n", count_plus, count_minus);

    return 0;
}