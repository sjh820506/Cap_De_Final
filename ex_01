#include <stdio.h>

int main() {
    int i;
    int number;
    int count_plus = 0;
    int count_minus = 0;

    for(i = 0; i<=10; i++) {
        printf("숫자 하나를 입력하세요. : ");

        scanf("%d", &number);

        if(number > 0) {
            count_plus++;
        }
        else if (number < 0) {
            count_minus++;
        }
    }

    printf("입력된 숫자 중에서 양의 정수는 %d개, 음의 정수는 %d개 입니다. \n", count_plus, ,count_minus);

    return 0;
}